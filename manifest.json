{
  "manifest_version": 3,
  "name": "Focus Reader Bracket",
  "version": "1.0",
  "description": "Floating reading bracket + page dimming for dyslexia & ADHD",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_title": "Toggle Focus Bracket"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}